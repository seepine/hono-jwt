{
  "name": "@seepine/hono-jwt",
  "version": "0.1.1",
  "description": "Hono JWT middleware — 验证与签发 JSON Web Tokens",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "keywords": [
    "hono",
    "jwt",
    "middleware",
    "auth",
    "jsonwebtoken",
    "hono-middleware"
  ],
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seepine/hono-jwt.git"
  },
  "homepage": "https://github.com/seepine/hono-jwt",
  "author": "seepine (https://github.com/seepine)",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsdown",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "format": "prettier --write src *.config.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "jsonwebtoken": "^9.0.3",
    "ms": "^2.1.1"
  },
  "peerDependencies": {
    "hono": ">=4.3.6"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "~3.2.4",
    "hono": "^4.11.3",
    "prettier": "^3.7.4",
    "tsdown": "^0.18.4",
    "typescript": "^5.8.2",
    "vitest": "~3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}